<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Molla - Bootstrap eCommerce Template</title>
    <meta name="keywords" content="HTML5 Template">
    <meta name="description" content="Molla - Bootstrap eCommerce Template">
    <meta name="author" content="p-themes">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="assets/images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/images/icons/favicon-16x16.png">
    <link rel="manifest" href="assets/images/icons/site.html">
    <link rel="mask-icon" href="assets/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="assets/images/icons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="Molla">
    <meta name="application-name" content="Molla">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="assets/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <!-- Main CSS File -->
    <link rel="stylesheet" href="assets/css/style.css">
</head>

<body>
    <div class="page-wrapper">


        <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Wishlist<span>Shop</span></h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/products">Products</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="container">
                    <table class="table table-wishlist table-mobile">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Offer&nbsp;Price</th>
                                <th>Stock Status</th>


                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#if products}}
                            {{#each products}}


                            <tr>


                                <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a href="#">
                                                <img src="/{{this.images.[0]}}" alt="Product image">
                                            </a>
                                        </figure>

                                        <h3 class="product-title">
                                            <a href="#">{{this.name}}</a>
                                        </h3><!-- End .product-title -->
                                    </div><!-- End .product -->
                                </td>
                                
                                 <td class="stock-col"> ₹ {{this.price}}</td>
                                {{#if this.discount}}
                               
                                <td class="stock-col">  ₹ {{calcDiscountedPrice this.price this.discount}}</td>
                                {{else}}
                                 <td class="stock-col">no offer</td>
                                 {{/if}}

                                
                                 {{#if this.stock}}
                                <td class="stock-col"><span class="in-stock">In stock</span></td>
                                    {{else}}
                                <td class="stock-col"><span class="in-stock" style="color: red;">out of stock</span>
                                    {{/if}}
                                </td>
                                
                                <td class="action-col">
                                    {{#if this.stock}}
                
                                     <a href="/addwishlisttocart/{{this._id}}" type="button"
                             class="btn btn-block btn-outline-primary-2" onclick="addWishlistToCart(event, '{{this._id}}')">
                                <i class="icon-cart-plus"></i>Add to Cart
                                    </a>
                                  
                                    {{else}}
                                    <a href="" type="button" class="btn btn-block btn-outline-primary-2 disabled"><i
                                            class="icon-cart-plus"></i>Add to Cart</a>
                                    {{/if}}
                                </td>

                                <td class="remove-col"> <a href=""><button
                                            class="btn-remove" onclick="removeFromWishlist('{{this._id}}')"><i class="icon-close"></i></button> </a></td>

                            </tr>
                            {{/each}}
                            
                        </tbody>
                        
                    </table><!-- End .table table-wishlist -->
                   {{else}}
                            <div style="text-align: center;" >
                                <img src="product-image/empty_cart.webp" alt=""
                                    style="width: 300px;height: 250px;text-align:center; margin-left:30%;">
                               <p>your wishlish is empty</p>
                            </div>
                            
                            {{/if}}
                  
                </div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
<script>
   async function addWishlistToCart(event, productId) {
    event.preventDefault(); // Prevent default action

    console.log('Adding product to cart:', productId);

    try {
        const response = await fetch(`/addwishlisttocart/${productId}`, {
            method: 'get',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        const data = await response.json();

        // Check if the response is successful
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Added to Cart',
                text: data.message,
                timer: 2000,
                showConfirmButton: false,
            });
             updateCartCount();
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message,
                timer: 2000,
                showConfirmButton: false,
            });
        }
    } catch (error) {
        console.error('Error adding to cart:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Server error while adding to cart!',
            timer: 2000,
            showConfirmButton: false,
        });
    }
}

async function removeFromWishlist(productId) {
    try {
        const response = await fetch(`/wishlist/remove/${productId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const result = await response.json();
        if (result.success) {
             Swal.fire({
                icon: 'success',
                title: 'Removed from Wishlist!',
                showConfirmButton: false,
                timer: 2000,
            });
        updateWishlistCount();
        } else {
            alert(result.message);
        }
    } catch (error) {
        console.error('Error removing from wishlist:', error);
    }
}
</script>
       
  

</body>


