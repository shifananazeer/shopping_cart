<section class="vh-100 gradient-custom" style="overflow-y:hidden;">
  <div class="container h-90 mt-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card text-black p-5" style="border-radius: 1rem; height: auto; background: linear-gradient(to bottom right, #c1cecd 30%, #3799a6 100%);">
          <div class="card-body p-4 text-center">
            <form action="/login" method="POST">
              <h2 class="fw-bold mb-4 text-uppercase">Login</h2>

              <p class="text-black-50 mb-4">Please enter your login and password!</p>

              {{#if error}}
              <p style="color: red;" class="error">{{error}}</p>
              {{/if}}

              <div class="form-outline form-white mb-4">
                <input type="email" id="typeEmailX" class="form-control form-control-lg" name="email" />
                <label class="form-label text-black" for="typeEmailX">Email</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" />
                <label class="form-label text-black" for="typePasswordX">Password</label>
              </div>

              <p class="small mb-3 pb-lg-2"><a class="text-black-50" href="/otp">Forgot password?</a></p>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

              <p class="text-center small text-muted mb-4 mt-4">or sign up with</p>
              <div class="d-grid gap-2 mb-4">
                <a href="/auth/google" class="btn w-100 btn-light font-sm d-flex align-items-center justify-content-center">
                  <svg aria-hidden="true" class="icon-svg me-2" width="20" height="20" viewBox="0 0 20 20">
                    <path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 002.38-5.88c0-.57-.05-.66-.15-1.18z" fill="#4285F4"></path>
                    <path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 01-7.18-2.54H1.83v2.07A8 8 0 008.98 17z" fill="#34A853"></path>
                    <path d="M4.5 10.52a4.8 4.8 0 010-3.04V5.41H1.83a8 8 0 000 7.18l2.67-2.07z" fill="#FBBC05"></path>
                    <path d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 001.83 5.4L4.5 7.49a4.77 4.77 0 014.48-3.3z" fill="#EA4335"></path>
                  </svg> Sign in using Google
                </a>
              </div>

              <p class="mb-0 mt-1 text-white-100">Don't have an account? <a href="/signup" class="text-white-100 fw-bold">Sign Up</a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
