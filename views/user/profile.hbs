<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/myProfile.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        /* Custom CSS for layout adjustments */
        body {
            background-color: #f8f9fa; /* Light background color */
        }
        .profile-img {
            width: 150px;
            height: 150px;
            object-fit: cover;
        }
        .profile-actions {
            margin-top: 20px;
        }
        .edit {
            font-size: 14px;
        }
        .referral-info{
            background-color: rgb(250, 245, 202);
        }
        .wallet-info{
               background-color: rgb(250, 245, 202);
        }
          .transaction-item {
        border-bottom: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 10px;
    }

    #pagination {
        margin-top: 20px;
    }

   .custom-btn {
    width: 20px;
   }
    </style>
</head>

<body>
    <div class="container cprofile rounded bg-white mt-5 mb-5">
        <div class="row">
            <!-- Left column with user info -->
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    {{#if user.profilePhoto}}
                    <img class="rounded-circle mt-5 profile-img" src="{{user.profilePhoto}}" alt="Profile Picture">
                    {{else}}
                    <img class="rounded-circle mt-5 profile-img" src="{{user.image}}" alt="Profile Picture">
                    {{/if}}
                    <span class="font-weight-bold">{{user.name}}</span>
                    <span class="text-black-50">{{user.email}}</span>
                    <div class="profile-actions mt-4">
                        <a href="/profile" class="btn btn-info">Personal Information</a>
                        <a href="/order-history" class="btn btn-info mt-2">My Orders</a>
                        <a href="/profile/changePassword" class="btn btn-info mt-2">Change Password</a>
                        <div class="referral-info p-2">
            <h2>Referral Information</h2>
            <p><strong>Your Referral Code:</strong> {{user.referralCode}}</p>
             <input type="text" id="referralLink" value="{{referralLink}}" readonly>
        <button class="btn btn-info mt-2"  onclick="copyToClipboard()">Copy Link</button>
        </div>
                    </div>
                </div>
            </div>
            <!-- Right column with profile details -->
            <div class="col-md-9">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="text-right">My Profile</h2>
                        <a href="/edit-profile" class="btn btn-primary">‚úé Edit</a>
                    </div>
                    <!-- User information section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="labels">Name:</label>
                            <h6>{{user.name}}</h6>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Email ID:</label>
                            <h6>{{user.email}}</h6>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Mobile Number:</label>
                            <h6>{{user.number}}</h6>
                        </div>
                     <div class="wallet-info">
    <h2>Wallet Information</h2>
    <p style="color: green;"><strong>Wallet Balance:</strong> ‚Çπ{{walletBalance}}</p>
    <button id="showTransactionsBtn" class="btn btn-info">Show Transactions</button>
    <div id="transactionsContainer" style="display: none;">
        <h3>Transaction History</h3>
        <div id="transactionsList">
           
        </div>
        <div id="pagination">
            <!-- Pagination controls will be dynamically inserted here -->
        </div>
    </div>
</div>
                    </div>
                    <!-- Addresses section -->
                    {{#each addresses}}
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <u><h4>Address</h4></u>
                            <p>{{this.houseName}} <br>
                                {{this.street}}, {{this.district}}<br>
                                {{this.state}}, {{this.pincode}}
                            </p>
                           
                            <div class="mb-2">
                                <a href="/edit-address?id={{this._id}}" class="btn btn-sm btn-primary edit">‚úé Edit Address</a>
                                <a href="/delete-address?id={{this._id}}" class="btn btn-sm btn-danger edit" onclick="return confirmDelete(event, this)">üóëÔ∏è Delete Address</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <!-- Add new address button -->
                    <div class="row">
                        <div class="col-md-12">
                            <a href="/profile/add-address" class="btn btn-success mt-5">Add New Address</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle (Bootstrap JS and Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

          document.getElementById('showTransactionsBtn').addEventListener('click', function() {
        const transactionsContainer = document.getElementById('transactionsContainer');
        transactionsContainer.style.display = transactionsContainer.style.display === 'none' ? 'block' : 'none';
        
        if (transactionsContainer.style.display === 'block') {
            fetchTransactions(1); // Fetch the first page of transactions
        }
    });

    function fetchTransactions(page) {
        fetch(`/transactions?page=${page}`)
            .then(response => response.json())
            .then(data => {
                const transactionsList = document.getElementById('transactionsList');
                const pagination = document.getElementById('pagination');
                
                // Clear previous transactions
                transactionsList.innerHTML = '';
                pagination.innerHTML = '';

                // Insert transactions into the list
                data.transactions.forEach(transaction => {
                    const transactionItem = document.createElement('div');
                    transactionItem.classList.add('transaction-item');
                    transactionItem.innerHTML = `
                        <p><strong>Date:</strong> ${new Date(transaction.date).toLocaleDateString()}</p>
                        <p><strong>Amount:</strong> ‚Çπ${transaction.amount}</p>
                        <p><strong>Description:</strong> ${transaction.description}</p>
                    `;
                    transactionsList.appendChild(transactionItem);
                });

                // Insert pagination controls
                if (data.totalPages > 1) {
                    for (let i = 1; i <= data.totalPages; i++) {
                        const pageButton = document.createElement('button');
                        pageButton.classList.add('btn', 'btn-secondary','custom-btn', 'me-2');
                        pageButton.style.width = '50px'; // Adjust the width as needed
                        pageButton.textContent = i;
                        pageButton.addEventListener('click', () => fetchTransactions(i));
                        pagination.appendChild(pageButton);
                    }
                }
            })
            .catch(error => {
                console.error('Error fetching transactions:', error);
            });
    }
          function copyToClipboard() {
        // Get the referral link input element
        const referralLinkInput = document.getElementById('referralLink');
        
        // Select the text field
        referralLinkInput.select();
        referralLinkInput.setSelectionRange(0, 99999); // For mobile devices

        // Attempt to copy the text
        navigator.clipboard.writeText(referralLinkInput.value)
            .then(() => {
                // Success
                Swal.fire({
                    title: 'Copied!',
                    text: 'Referral link copied to clipboard.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            })
            .catch(err => {
                // Failure
                Swal.fire({
                    title: 'Failed!',
                    text: 'Failed to copy referral link. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                console.error('Failed to copy text: ', err);
            });
    }
        function confirmDelete(event, element) {
            event.preventDefault(); // Prevent the default link behavior

            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this address?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the href of the link if the user confirms
                    window.location.href = element.href;
                }
            });
        }
    </script>
</body>

</html>
