<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Orders</title>
    <!-- Include your CSS stylesheets and other headers -->
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Add custom styles as needed */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
        .status {
            font-weight: bold;
            text-transform: capitalize;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
        .cancel-btn {
            color: red;
        }
        
     .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination a {
            margin: 0 5px;
            padding: 8px 16px;
            text-decoration: none;
            background-color: #f1f1f1;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .pagination a:hover {
            background-color: #ddd;
        }

        .pagination a.active {
            background-color: #333;
            color: white;
            border: 1px solid #333;
        }

        .pagination a.prev, .pagination a.next {
            font-weight: bold;
        }
 

    </style>
</head>
<body>
    <section>
     <main id="main" class="main">
    <div class="container">
        <h2>Admin Orders</h2>
     
        <!-- Orders Table -->
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Total Amount</th>
                    <th>Order Date</th> 
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.userId.name}}</td>
                    <td>{{this.totalAmountToBePaid}} â‚¹</td>
                     <td>{{formatDate this.createdAt}}</td> 
                    <td class="status">{{this.status}}</td>
                    <td class="actions">
                        <form action="/admin/orders/{{this._id}}/change-status" method="POST">
                            <select name="status" onchange="this.form.submit()">
                                <option value="Pending" {{#ifCond this.status '===' 'Pending'}}selected{{/ifCond}}>Pending</option>
                                <option value="Processing" {{#ifCond this.status '===' 'Processing'}}selected{{/ifCond}}>Processing</option>
                                <option value="Shipped" {{#ifCond this.status '===' 'Shipped'}}selected{{/ifCond}}>Shipped</option>
                                <option value="Delivered" {{#ifCond this.status '===' 'Delivered'}}selected{{/ifCond}}>Delivered</option>
                                <option value="Cancelled" {{#ifCond this.status '===' 'Cancelled'}}selected{{/ifCond}}>Cancelled</option>
                            </select>
                        </form>
                       {{!-- <form action="/admin/orders/{{this._id}}/cancel" method="post" style="display:inline;">
                            <button type="submit" {{#ifCond this.status '===' 'Delivered'}}disabled{{/ifCond}}>Cancel Order</button>
                        </form> --}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <br>
        <a href="/admin/dashboard">Back to Dashboard</a> <!-- Replace with your actual admin dashboard link -->
    </div>
      <!-- Pagination -->
 <div class="pagination">
    {{#if (gt currentPage 1)}}
        <a href="/admin/orders?page={{subtract currentPage 1}}" class="prev">Previous</a>
    {{/if}}
    
    {{#each (range 1 totalPages)}}
        <a href="/admin/orders?page={{this}}" class="{{#if (eq this ../currentPage)}}active{{/if}}">{{this}}</a>
    {{/each}}
    
    {{#if (lt currentPage totalPages)}}
        <a href="/admin/orders?page={{add currentPage 1}}" class="next">Next</a>
    {{/if}}
</div>
  </section>
</main>
    <!-- Include your JavaScript scripts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
       function getCurrentPage() {
  const urlParams = new URLSearchParams(window.location.search);
  return urlParams.get('page') || 1;
}
    </script>
    
</body>
</html>
